{
  "latex-workshop.latex.tools": [
    {
      "name": "pdflatex",
      "command": "/usr/bin/pdflatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
      ]
    },
    {
      "name": "bibtex",
      "command": "/usr/bin/bibtex",
      "args": [
        "%DOCFILE%"
      ]
    },
    {
      "name": "latexmk",
      "command": "/usr/bin/latexmk",
      "args": [
        "-pdf",
        "-pdflatex=/usr/bin/pdflatex -synctex=1 -interaction=nonstopmode -file-line-error %O %S",
        "%DOC%"
      ]
    },
    {
      "name": "latexmk-system",
      "command": "/usr/bin/latexmk",
      "args": [
        "-pdf",
        "-f",
        "-pdflatex=/usr/bin/pdflatex -synctex=1 -interaction=nonstopmode -file-line-error %O %S",
        "%DOC%"
      ]
    },
    {
      "name": "biber",
      "command": "/usr/bin/biber",
      "args": [
        "%DOCFILE%"
      ]
    }
  ],

  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk",
      "tools": [
        "latexmk"
      ]
    },
    {
      "name": "latexmk (system)",
      "tools": [
        "latexmk-system"
      ]
    },
    {
      "name": "pdflatex -> bibtex -> pdflatex*2",
      "tools": [
        "pdflatex",
        "bibtex",
        "pdflatex",
        "pdflatex"
      ]
    }
  ],

  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.latex.autoBuild.run": "onFileChange",
  "latex-workshop.latex.clean.enabled": true,
  "latex-workshop.latex.outDir": "./out",
  "latex-workshop.latex.clean.onBuild": true
}
